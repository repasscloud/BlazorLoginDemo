    // ===== Travel Policy Start Date End Date Helper
    private bool _expiresManuallyEdited;

    private static DateTime? AsUtcMidnight(DateTime? d)
        => d.HasValue
            ? new DateTime(d.Value.Year, d.Value.Month, d.Value.Day, hour: 0, minute: 0, second: 0, DateTimeKind.Utc)
            : null;

    private Task OnEffectiveChanged(DateTime? newValue)
    {
        Vm.EffectiveFromUtc = AsUtcMidnight(newValue);

        if (!_expiresManuallyEdited)
            Vm.ExpiresOnUtc = Vm.EffectiveFromUtc?.AddYears(value: 1);

        return Task.CompletedTask;
    }

    private Task OnExpiresChanged(DateTime? newValue)
    {
        _expiresManuallyEdited = true;
        Vm.ExpiresOnUtc = AsUtcMidnight(newValue);
        return Task.CompletedTask;
    }

    // ===== Travel Policy Name Helper
        private static string EnsureUniqueName(string baseName, IEnumerable<string> names)
    {
        HashSet<string>? set = new HashSet<string>(names, StringComparer.Ordinal);
        if (!set.Contains(baseName)) return baseName;
        for (int i = 2; ; i++)
        {
            string? candidate = $"{baseName}-{i}";
            if (!set.Contains(candidate)) return candidate;
        }
    }
