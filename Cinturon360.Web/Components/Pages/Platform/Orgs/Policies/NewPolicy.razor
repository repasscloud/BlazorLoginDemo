    protected override async Task OnInitializedAsync()
    {
        try
        {
            // Load org
            IAdminOrgServiceUnified.OrgAggregate? agg = await OrgSvc.GetByIdAsync(OrgId);
            OrgName = agg?.Org?.Name ?? throw new InvalidOperationException(message: $"Organization '{OrgId}' missing name.");

            AllRegions = await RegionSvc.GetAllAsync();
            AllContinents = await ContinentSvc.GetAllAsync();
            AllCountries = await CountrySvc.GetAllAsync();

            // NEW policy: do not create anything on init. Do not seed selections.
            Model = new TravelPolicy
            {
                OrganizationUnifiedId = OrgId,
                PolicyName = $"{OrgName} Travel Policy",
                DefaultCurrencyCode = "AUD",

                // empty geo arrays
                RegionIds = Array.Empty<int>(),
                ContinentIds = Array.Empty<int>(),
                CountryIds = Array.Empty<int>(),
                DisabledCountryIds = Array.Empty<int>()
            };

            // Build VM from the empty model
            Vm = TravelPolicyVm.FromModel(Model);

            // Keep selection lists empty for a brand-new policy
            SelectedContinentIds = Array.Empty<string>();
            SelectedRegionIds    = Array.Empty<string>();
            SelectedCountryIds   = Array.Empty<string>();
            SelectedDisabledCountryIds = Array.Empty<string>();

            // hire car
            // fallbacks = first option from each list
            var fb = (
                AcrissType.CategoryOptions[0].code,
                AcrissType.BodyOptions[0].code,
                AcrissType.TransmissionOptions[0].code,
                AcrissType.FuelOptions[0].code
            );

            // seed dropdowns from existing value (or fallbacks)
            var (c,b,t,f) = AcrissType.AcrissCodec.Decode(Vm.DefaultCarClass, fb);
            var (c2,b2,t2,f2) = AcrissType.AcrissCodec.Decode(Vm.MaxCarClass, fb);
            _defCat  = c; _defBody = b; _defTrans = t; _defFuel = f;
            _maxCat  = c2; _maxBody = b2; _maxTrans = t2; _maxFuel = f2;

            // ensure text box shows a valid 4-letter code at load
            UpdateDefault();

            EditCtx = new EditContext(Vm);
            Loaded = true;
        }
        catch (Exception ex)
        {
            Error = ex.GetBaseException().Message;
            Log.LogError(ex, message: "Init failed");
        }
    }

    private async Task SaveAsync()
    {
        if (Model is null) return;
        try
        {
            // Map VM -> entity
            Vm.Apply(Model);

            // Parse array selections -> int sets
            HashSet<int>? continentIds = SelectedContinentIds.Select(int.Parse).ToHashSet();
            HashSet<int>? regionIds = SelectedRegionIds.Select(int.Parse).ToHashSet();
            HashSet<int>? countryIds = SelectedCountryIds.Select(int.Parse).ToHashSet();
            HashSet<int>? disabledIds = SelectedDisabledCountryIds.Select(int.Parse).ToHashSet();

            // Write selections into int[] fields on the model
            static int[] ToArray(HashSet<int> s) => s.OrderBy(x => x).ToArray();
            Model.ContinentIds = ToArray(continentIds);
            Model.RegionIds = ToArray(regionIds);
            Model.CountryIds = ToArray(countryIds);
            Model.DisabledCountryIds = ToArray(disabledIds);

            // Persist core policy (service normalizes arrays)
            Model = await PolicySvc.CreateAsync(Model);

            // Navigate as needed
            Nav.NavigateTo(uri: $"/platform/travelpolicy/list/{OrgId}");
        }
        catch (Exception ex)
        {
            Error = ex.GetBaseException().Message;
            Log.LogError(ex, message: "Save failed");
        }
    }

