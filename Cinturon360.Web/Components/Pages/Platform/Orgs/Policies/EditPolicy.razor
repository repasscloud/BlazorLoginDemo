    void UpdateDefault()
    {
        Vm.DefaultCarClass = AcrissType.AcrissCodec.Encode(DefCat, DefBody, DefTrans, DefFuel);
        Vm.MaxCarClass     = AcrissType.AcrissCodec.Encode(MaxCat, MaxBody, MaxTrans, MaxFuel);
    }

    protected override async Task OnInitializedAsync()
    {
        try
        {
            // Load policy
            Model = await PolicySvc.GetByIdAsync(TravelPolicyId);
            if (Model is null)
            {
                Error = $"TravelPolicy '{TravelPolicyId}' not found.";
                return;
            }

            // Load org name
            var agg = await OrgSvc.GetByIdAsync(Model.OrganizationUnifiedId);
            OrgName = agg?.Org?.Name ?? Model.OrganizationUnifiedId;

            // Load catalogs
            AllRegions    = await RegionSvc.GetAllAsync();
            AllContinents = await ContinentSvc.GetAllAsync();
            AllCountries  = await CountrySvc.GetAllAsync();

            // Build VM from model
            Vm = TravelPolicyVm.FromModel(Model);

            // Seed selection lists from int[] arrays on the model
            SelectedRegionIds          = (Model.RegionIds          ?? Array.Empty<int>()).Select(i => i.ToString()).ToArray();
            SelectedContinentIds       = (Model.ContinentIds       ?? Array.Empty<int>()).Select(i => i.ToString()).ToArray();
            SelectedCountryIds         = (Model.CountryIds         ?? Array.Empty<int>()).Select(i => i.ToString()).ToArray();
            SelectedDisabledCountryIds = (Model.DisabledCountryIds ?? Array.Empty<int>()).Select(i => i.ToString()).ToArray();

            // Car decode
            var fb = (
                AcrissType.CategoryOptions[0].code,
                AcrissType.BodyOptions[0].code,
                AcrissType.TransmissionOptions[0].code,
                AcrissType.FuelOptions[0].code
            );
            var (c,b,t,f)   = AcrissType.AcrissCodec.Decode(Vm.DefaultCarClass, fb);
            var (c2,b2,t2,f2) = AcrissType.AcrissCodec.Decode(Vm.MaxCarClass, fb);
            _defCat = c; _defBody = b; _defTrans = t; _defFuel = f;
            _maxCat = c2; _maxBody = b2; _maxTrans = t2; _maxFuel = f2;
            UpdateDefault();

            EditCtx = new EditContext(Vm);
        }
        catch (Exception ex)
        {
            Error = ex.GetBaseException().Message;
            Log.LogError(ex, "Init failed");
        }
        finally
        {
            Loaded = true;
        }
    }

    private async Task SaveAsync()
    {
        if (Model is null) return;

        try
        {
            // Map VM -> entity
            Vm.Apply(Model);

            // Convert selections to int[] and assign
            static int[] ToIds(string[] s) => s?.Select(int.Parse).Distinct().OrderBy(x => x).ToArray() ?? Array.Empty<int>();
            Model.RegionIds          = ToIds(SelectedRegionIds);
            Model.ContinentIds       = ToIds(SelectedContinentIds);
            Model.CountryIds         = ToIds(SelectedCountryIds);
            Model.DisabledCountryIds = ToIds(SelectedDisabledCountryIds);

            // Persist update
            Model = await PolicySvc.UpdateAsync(Model);

            // Return to list for the org
            Nav.NavigateTo($"/platform/travelpolicy/list/{Model.OrganizationUnifiedId}");
        }
        catch (Exception ex)
        {
            Error = ex.GetBaseException().Message;
            Log.LogError(ex, "Save failed");
        }
    }

    private void Cancel()
    {
        var orgId = Model?.OrganizationUnifiedId ?? string.Empty;
        Nav.NavigateTo($"/platform/travelpolicy/list/{orgId}");
    }

