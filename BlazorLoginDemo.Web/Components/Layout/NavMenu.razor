@code {
    private string? currentUrl;
    
    // platform
    private void TogglePlatformOrgsGroup() => platformOrgsOpen = !platformOrgsOpen;
    private bool platformOrgsOpen;

    private void TogglePlatformUsersGroup() => platformUsersOpen = !platformUsersOpen;
    private bool platformUsersOpen;
    
    private bool adminClientsOpen;
    private void ToggleAdminClientsGroup() => adminClientsOpen = !adminClientsOpen;
    private bool adminPoliciesOpen;
    private void ToggleAdminPoliciesGroup() => adminPoliciesOpen = !adminPoliciesOpen;
    private bool adminUsersOpen;
    private void ToggleAdminUsersGroup() => adminUsersOpen = !adminUsersOpen;
    private bool adminKeyOpen;
    private void ToggleAdminKeyGroup() => adminKeyOpen = !adminKeyOpen;
    private bool authOpen; // default: collapsed
    private void ToggleAuthGroup() => authOpen = !authOpen;
    private bool adminTravelBookingsOpen;
    private void ToggleAdminTravelBookingsGroup() => adminTravelBookingsOpen = !adminTravelBookingsOpen;

    private bool sudoGroupOpen;
    private void ToggleSudoGroup() => sudoGroupOpen = !sudoGroupOpen;

    protected override void OnInitialized()
    {
        currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        StateHasChanged();
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }
}
