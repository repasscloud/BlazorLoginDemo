                            <label class="form-label">Non-Stop</label>
                            <div class="form-check form-switch mt-2">
                                <InputCheckbox class="form-check-input" @bind-Value="U.NonStopFlightVisible" />
                                <label class="form-check-label" for="nsVisible">
