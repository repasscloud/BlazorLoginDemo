@code {
    [Parameter] public string OrgId { get; set; } = default!;

    private bool Loaded;
    private string? Error;
    private string OrgName = "";
    private TravelPolicy? Model;
    private TravelPolicyVm Vm = new();
    private EditContext? EditCtx;

    // Catalog data
    private List<Continent> AllContinents = new();
    private List<Region>    AllRegions    = new();
    private List<Country>   AllCountries  = new();

    // Selections
    private string[] SelectedContinentIds = Array.Empty<string>();
    private string[] SelectedRegionIds    = Array.Empty<string>();
    private string[] SelectedCountryIds   = Array.Empty<string>();
    private string[] SelectedDisabledCountryIds = Array.Empty<string>();

    // car hire
    // one-char strings bound to the four selects
    private string _defCat = default!;
    private string _defBody = default!;
    private string _defTrans = default!;
    private string _defFuel = default!;

    // setters recompute Vm.DefaultCarClass so it updates live
    private string DefCat  { get => _defCat;  set { _defCat  = value; UpdateDefault(); } }
    private string DefBody { get => _defBody; set { _defBody = value; UpdateDefault(); } }
    private string DefTrans{ get => _defTrans;set { _defTrans= value; UpdateDefault(); } }
    private string DefFuel { get => _defFuel; set { _defFuel = value; UpdateDefault(); } }

    void UpdateDefault()
        => Vm.DefaultCarClass = AcrissType.AcrissCodec.Encode(DefCat, DefBody, DefTrans, DefFuel);

    protected override async Task OnInitializedAsync()
    {
        try
        {
            // Load org
            IAdminOrgServiceUnified.OrgAggregate? agg = await OrgSvc.GetByIdAsync(OrgId);
            OrgName = agg?.Org?.Name ?? throw new InvalidOperationException($"Organization '{OrgId}' missing name.");

            // Load catalogs
            AllContinents = (await ContinentSvc.GetAllAsync()).ToList();   // ordered in service
            AllRegions    = (await RegionSvc.GetAllAsync()).ToList();
            AllCountries  = (await CountrySvc.GetAllAsync()).ToList();

            // Find or create policy for org
            var existing = await PolicySvc.GetForOrganizationAsync(OrgId);
            Model = existing.FirstOrDefault();
            if (Model is null)
            {
                Model = await PolicySvc.CreateDefaultAsync(new TravelPolicy
                {
                    OrganizationUnifiedId = OrgId,
                    PolicyName = $"{OrgName} Default Travel Policy",
                    DefaultCurrencyCode = "AUD"
                });
            }

            // Build VM
            Vm = TravelPolicyVm.FromModel(Model);

            // Seed selection lists from navs
            SelectedContinentIds = Model.Continents?.Select(x => x.Id.ToString()).ToArray() ?? Array.Empty<string>();
            SelectedRegionIds    = Model.Regions?.Select(x => x.Id.ToString()).ToArray() ?? Array.Empty<string>();
            SelectedCountryIds   = Model.Countries?.Select(x => x.Id.ToString()).ToArray() ?? Array.Empty<string>();

            // Disabled countries via service
            SelectedDisabledCountryIds = (await DisabledSvc.GetDisabledCountryIdsAsync(Model.Id))
                .Select(id => id.ToString()).ToArray();

            // hire car
            // fallbacks = first option from each list
            var fb = (
                AcrissType.CategoryOptions[0].code,
                AcrissType.BodyOptions[0].code,
                AcrissType.TransmissionOptions[0].code,
                AcrissType.FuelOptions[0].code
            );

            // seed dropdowns from existing value (or fallbacks)
            var (c,b,t,f) = AcrissType.AcrissCodec.Decode(Vm.DefaultCarClass, fb);
            _defCat  = c; _defBody = b; _defTrans = t; _defFuel = f;

            // ensure text box shows a valid 4-letter code at load
            UpdateDefault();

            EditCtx = new EditContext(Vm);
            Loaded = true;
        }
        catch (Exception ex)
        {
            Error = ex.GetBaseException().Message;
            Log.LogError(ex, "Init failed");
        }
    }

    private async Task SaveAsync()
    {
        if (Model is null) return;
        try
        {
            // Map VM -> entity
            Vm.Apply(Model);

            // Parse array selections -> int sets
            var continentIds = SelectedContinentIds.Select(int.Parse).ToHashSet();
            var regionIds    = SelectedRegionIds.Select(int.Parse).ToHashSet();
            var countryIds   = SelectedCountryIds.Select(int.Parse).ToHashSet();
            var disabledIds  = SelectedDisabledCountryIds.Select(int.Parse).ToHashSet();

            // Rebind continents/regions/countries from selections
            Model.Continents = AllContinents.Where(c => continentIds.Contains(c.Id)).ToList();
            Model.Regions    = AllRegions.Where(r => regionIds.Contains(r.Id)).ToList();
            Model.Countries  = AllCountries.Where(c => countryIds.Contains(c.Id)).ToList();

            // Persist core policy
            Model = await PolicySvc.UpdateAsync(Model);

            // Persist disabled countries atomically
            await DisabledSvc.SetDisabledCountriesAsync(Model.Id, disabledIds);

            // Navigate as needed
