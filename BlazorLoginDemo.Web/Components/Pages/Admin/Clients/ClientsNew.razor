                return;
            }

            var details = await resp.Content.ReadAsStringAsync();
            _error = $"Save failed (HTTP {(int)resp.StatusCode}). {details}";
        }
        catch (Exception ex)
        {
            _error = ex.Message;
        }
        finally
        {
            _busy = false;
        }
    }

