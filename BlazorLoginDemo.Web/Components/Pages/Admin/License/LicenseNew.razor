@code
{
    [Parameter, EditorRequired]
    public required string AvaClientId { get; set; }

    private AvaClient? _client;

    // Backing model for the form
    private LicenseAgreement _model = new()
    {
        //Id = Nanoid.Generate(alphabet: Nanoid.Alphabets.HexadecimalUppercase, size: 14),
        // This will be overwritten after lookup succeeds
        AvaClientId = string.Empty
    };

    private LateFeeConfig? _lateFeeConfig;

    // Placeholder error page (you'll create it later)
    private const string ErrorPageUrl = "/errors/ava-client-not-found";

    // Enum value sources (populated from real enums at runtime)
    private readonly PaymentTerms[] _paymentTerms = Enum.GetValues<PaymentTerms>();
    @* private readonly PaymentMethod[] _paymentMethods = Enum.GetValues<PaymentMethod>(); *@
    private static readonly IReadOnlyList<(PaymentMethod Value, string Text)> _paymentMethods =
        Enum.GetValues<PaymentMethod>()
          .Select(e => (e, GetDisplayName(e)))
          .ToList();
    private readonly BillingType[] _billingTypes = Enum.GetValues<BillingType>();
    @* private readonly BillingFrequency[] _billingFrequencies = Enum.GetValues<BillingFrequency>(); *@
    private static readonly IReadOnlyList<(BillingFrequency Value, string Text)> _billingFrequencies = 
        Enum.GetValues<BillingFrequency>()
          .Select(e => (e, GetDisplayName(e)))
          .ToList();
    private readonly PaymentStatus[] _paymentStatuses = Enum.GetValues<PaymentStatus>();
    @* private readonly ServiceFeeType[] _serviceFeeTypes = Enum.GetValues<ServiceFeeType>(); *@
    private static readonly IReadOnlyList<(ServiceFeeType Value, string Text)> _serviceFeeTypes =
        Enum.GetValues<ServiceFeeType>()
            .Select(e => (e, GetDisplayName(e)))
            .ToList();
    
    protected override async Task OnParametersSetAsync()
    {
        // ===== lookup =====
        _client = await AvaClientService.GetByIdAsync(AvaClientId);

        if (_client is null)
        {
            // Navigate to your custom error page with context
            Nav.NavigateTo($"{ErrorPageUrl}?clientId={Uri.EscapeDataString(AvaClientId)}", forceLoad: true);
            return;
        }

        // Ensure model has correct client id when form loads
        _model.AvaClientId = _client.Id;
        _model.LateFeeConfigId = Nanoid.Generate(size: 14);

        // set the default tax rate
        _model.TaxRate = _client.TaxIdType switch
        {
            TaxIdType.None => 0m,
            TaxIdType.AU_ABN or TaxIdType.AU_ACN or TaxIdType.AU_ARBN or TaxIdType.AU_ARSN => 10m,
            _ => 0m
        };
    }

    private async Task HandleSubmit()
    {
        var result = await LicenseAgreementService.CreateAsync(_model);

        if (result is not null)
        {
            Nav.NavigateTo($"/admin/clients/{AvaClientId}", forceLoad: true);
            return;
        }
        
        // display error text
    }

    private void OnCancel() => Nav.NavigateTo("/");

    private static string GetDisplayName<TEnum>(TEnum value)
        where TEnum : struct, Enum
    {
        var member = typeof(TEnum).GetMember(value.ToString());
        if (member.Length > 0)
        {
            var attr = member[0]
                .GetCustomAttributes(typeof(DisplayAttribute), inherit: false)
                .OfType<DisplayAttribute>()
                .FirstOrDefault();

            if (!string.IsNullOrWhiteSpace(attr?.Name))
                return attr!.Name!;
        }
        return value.ToString()!;
    }
}
