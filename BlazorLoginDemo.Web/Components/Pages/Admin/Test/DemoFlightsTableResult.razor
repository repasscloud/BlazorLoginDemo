            Segments = new()
            {
                new Segment{ Carrier="QF", FlightNo="QF73", From="SYD", To="SFO", DepartLocal="17:25", ArriveLocal="12:35", Duration="13h 10m", Cabin="Business", Meal="Premium meal", Baggage="40kg", WiFi=true }
